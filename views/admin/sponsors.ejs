<% include includes/head %>
    <div class="wrapper">
        <% include includes/sidebar %>
            <div class="main-content">
                <% include includes/navbar %>
                    <div class="content">
                        <div class="container-fluid">

                            <!-- BreadCrumb -->
                            <div class="row">
                                <div class="col-12">
                                    <ol class="breadcrumb bg-light-mode">
                                        <li class="breadcrumb-item">
                                            <a href="">
                                                <i class="fas fa-home"></i> Home
                                            </a>
                                        </li>
                                        <li class="breadcrumb-item active" aria-current="page">
                                            <i class='fas fa-users'></i> Sponsors
                                        </li>
                                    </ol>
                                </div>
                            </div>
                            <!-- BreadCrumb End -->

                            <!-- Add Button -->
                            <!-- Add Button Modal-->
                            <div class="row">
                                <div class="col-12">
                                    <div class="float-left mdl-sponsor-form mt-5">
                                        <a href="/admin/Sponsors/add_sponsor" class="btn btn-outline-kts">
                                            <i class="fas fa-plus"></i>
                                            Add A Sponsor
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- End Add Button Modal-->
                            <!-- Add Button Form -->
                            <!-- <div class="row">
                                <div class="col-12">
                                    <div class="float-left mt-5">
                                        <a href="/admin/Sponsors/add_sponsor" class="btn btn-outline-kts">
                                            <i class="fas fa-plus"></i>
                                            Add A Sponsor
                                        </a>
                                    </div>
                                </div>
                            </div> -->
                            <!-- End Add Button Form-->
                            <!-- Add Button End -->

                            <!-- Sponsors Table -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="card card-stats mt-5">
                                        <div class="card-table-title bg-success">
                                            <h4 class="card-title ">Sponsors Table</h4>
                                            <p class="card-description"> List of sponsors for the Kids To school Foundation.</p>

                                        </div>
                                        <div class="card-body mt-5">
                                            <% if (spns.length > 0) {%>
                                            <div class="table-responsive">
                                                <table class="table table-hover table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">S/N</th>
                                                            <th scope="col">Name</th>
                                                            <th scope="col">Proffession</th>
                                                            <th scope="col">Kids</th>
                                                            <th scope="col">Date Created</th>
                                                            <th scope="col">Last Login</th>
                                                            <th scope="col">Status</th>
                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    <%
                                                        for (var i = 0; i < spns.length; i++) {
                                                    %>
                                                        <tr>
                                                            <th scope="row"><%= i + 1; %></th>
                                                            <td>
                                                                <%= spns[i].fname + " " + spns[i].lname %>
                                                            </td>
                                                            <td>
                                                                <%= spns[i].proffession %>
                                                            </td>
                                                            <td>
                                                                0
                                                            </td>
                                                            <td class="pretty-date">
                                                                <%= spns[i].date_created %>
                                                            </td>
                                                            <td class="pretty-date">
                                                                <%= spns[i].last_login %>
                                                            </td>
                                                            <% if (spns[i].id !=user.id) { %>
                                                            <td>
                                                                <% if (spns[i].is_active) { %>
                                                                <div class="custom-control custom-switch">
                                                                    <input type="checkbox" class="custom-control-input" id="customSwitch-<%= spns[i].id %>" value="False" checked>
                                                                    <label class="custom-control-label" for="customSwitch-<%= spns[i].id %>"> Active</label>
                                                                </div>
                                                                <% } else { %>
                                                                <div class="custom-control custom-switch">
                                                                    <input type="checkbox" class="custom-control-input" id="customSwitch-<%= spns[i].id %>" value="True">
                                                                    <label class="custom-control-label" for="customSwitch-<%= spns[i].id %>"> In-Active</label>
                                                                </div>
                                                                <% } %>
                                                            </td>
                                                            <% }  else { %>
                                                            <td></td>
                                                            <% } %>
                                                            <td class="td-actions">
                                                                <a href="#" class="profile text-info mr-4" data-id="<%= spns[i].id %>" data-url="/admin/User/get_profile" data-type="edit-modal" data-toggle="tooltip" data-placement="top" title="Sponsor Details">
                                                                    <i class="fas fa-info-circle"></i>
                                                                </a>
                                                                <a href="#" class="edit-sponsor text-primary mr-4" data-id="<%= spns[i].id %>" data-url="/admin/User/get_profile" data-type="edit-modal" data-toggle="tooltip" data-placement="top" title="Edit Sponsor">
                                                                        <i class="fas fa-pencil-alt"></i>
                                                                </a>
                                                                <% if (user.user_type == "ADMS") { %>
                                                                <a href="#" class="delete-sponsor text-danger" data-id="<%= spns[i].id %>" data-url="/admin/User/delete_profile" data-toggle="tooltip" data-placement="top" title="Remove Sponsor">
                                                                    <i class="fas fa-times"></i>
                                                                </a>
                                                                <% } %>
                                                                
                                                            </td>
                                                        </tr>
                                                    <% } %>
                                                            
                                                        
                                                    </tbody>
                                                </table>
                                            </div>
                                        <% } else { %>
                                            <div class="my-5">
                                                <h6 class="text-center text-danger">No Sponsors Available</h6>
                                            </div>
                                        <% } %>

                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- Sponsor Table End -->
                        </div>
                    </div>
                        
            </div>
    </div>
    
<% include includes/modal_2.ejs %>                    
<script src="/javascripts/personal/script_2.js"></script>
</body>

</html>