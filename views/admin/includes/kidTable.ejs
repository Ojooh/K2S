<div class="row listn <%= tab.row_list%>">
    <div class="col-12">
        <div class="card card-stats mt-5">
            <div class="card-table-title bg-success">
                <h4 class="card-title ">Kids Table</h4>
                <p class="card-description"> List of kids for the Kids To school Foundation.</p>

            </div>
            <div class="card-body mt-5">
                <% if (kds.length> 0) {%>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">S/N</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Fees</th>
                                    <th scope="col">Date Created</th>
                                    <th scope="col">Last Editted</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <% if (kds.length> 1) { %>
                                <tbody>
                                    <% for (var i=0; i < kds.length; i++) { %>
                                        <tr>
                                            <th scope="row">
                                                <%= i + 1; %>
                                            </th>
                                            <td>
                                                <%= kds[i].fname + " " + kds[i].lname %>
                                            </td>
                                            <td>
                                                <%= kds[i].category %>
                                            </td>
                                            <td class="pretty-currency">
                                                <%= kds[i].school_fees %>
                                            </td>
                                            <td class="pretty-date">
                                                <%= kds[i].date_joined %>
                                            </td>
                                            <% if (kds[i].last_edit=="0000-00-00 00:00:00" ) { %>
                                                <td>
                                                    Never
                                                </td>
                                                <% } else { %>
                                                    <td class="pretty-date">
                                                        <%= kds[i].last_edit %>
                                                    </td>
                                                    <% } %>
                                                        <td>
                                                            <% if (kds[i].is_active) { %>
                                                                <div class="custom-control custom-switch">
                                                                    <input type="checkbox" class="custom-control-input"
                                                                        id="customSwitch-<%= kds[i].id %>" value="False"
                                                                        checked>
                                                                    <label class="custom-control-label"
                                                                        for="customSwitch-<%= kds[i].id %>">
                                                                        Active</label>
                                                                </div>
                                                                <% } else { %>
                                                                    <div class="custom-control custom-switch">
                                                                        <input type="checkbox"
                                                                            class="custom-control-input"
                                                                            id="customSwitch-<%= kds[i].id %>"
                                                                            value="True">
                                                                        <label class="custom-control-label"
                                                                            for="customSwitch-<%= kds[i].id %>">
                                                                            In-Active</label>
                                                                    </div>
                                                                    <% } %>
                                                        </td>
                                                        <td class="td-actions">
                                                            <a href="#" class="profile text-info mr-4"
                                                                data-id="<%= kds[i].id %>"
                                                                data-url="/admin/Kid/get_profile"
                                                                data-type="display-modal" data-toggle="tooltip"
                                                                data-placement="top" title="Kid Details">
                                                                <i class="fas fa-info-circle"></i>
                                                            </a>
                                                            <a href="#" class="edit-kid text-primary mr-4"
                                                                data-id="<%= kds[i].id %>"
                                                                data-url="/admin/Kid/get_profile" data-type="edit-modal"
                                                                data-toggle="tooltip" data-placement="top"
                                                                title="Edit Kid">
                                                                <i class="fas fa-pencil-alt"></i>
                                                            </a>
                                                            <% if (user.user_type=="ADMS" ) { %>
                                                                <a href="#" class="delete-kid text-danger"
                                                                    data-id="<%= kds[i].id %>"
                                                                    data-url="/admin/Kids/delete_profile"
                                                                    data-toggle="tooltip" data-placement="top"
                                                                    title="Remove Kid">
                                                                    <i class="fas fa-times"></i>
                                                                </a>
                                                                <% } %>
                                                        </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                                <% } else if (kds.length==1) { %>
                                    <tbody>
                                        <% for (var i=0; i < kds[0].length; i++) { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= i + 1; %>
                                                </th>
                                                <td>
                                                    <%= kds[0][i].fname + " " + kds[0][i].lname %>
                                                </td>
                                                <td>
                                                    <%= kds[0][i].category %>
                                                </td>
                                                <td class="pretty-currency">
                                                    <%= kds[0][i].school_fees %>
                                                </td>
                                                <td class="pretty-date">
                                                    <%= kds[0][i].date_joined %>
                                                </td>
                                                <% if (kds[0][i].last_edit=="0000-00-00 00:00:00" ) { %>
                                                    <td>
                                                        Never
                                                    </td>
                                                    <% } else { %>
                                                        <td class="pretty-date">
                                                            <%= kds[0][i].last_edit %>
                                                        </td>
                                                        <% } %>
                                                            <td>
                                                                <% if (kds[0][i].is_active) { %>
                                                                    <div class="custom-control custom-switch">
                                                                        <input type="checkbox"
                                                                            class="custom-control-input"
                                                                            id="customSwitch-<%= kds[0][i].id %>"
                                                                            value="False" checked>
                                                                        <label class="custom-control-label"
                                                                            for="customSwitch-<%= kds[0][i].id %>">
                                                                            Active</label>
                                                                    </div>
                                                                    <% } else { %>
                                                                        <div class="custom-control custom-switch">
                                                                            <input type="checkbox"
                                                                                class="custom-control-input"
                                                                                id="customSwitch-<%= kds[0][i].id %>"
                                                                                value="True">
                                                                            <label class="custom-control-label"
                                                                                for="customSwitch-<%= kds[0][i].id %>">
                                                                                In-Active</label>
                                                                        </div>
                                                                        <% } %>
                                                            </td>
                                                            <td class="td-actions">
                                                                <a href="#" class="profile text-info mr-4"
                                                                    data-id="<%= kds[0][i].id %>"
                                                                    data-url="/admin/Kid/get_profile"
                                                                    data-type="display-modal" data-toggle="tooltip"
                                                                    data-placement="top" title="Kid Details">
                                                                    <i class="fas fa-info-circle"></i>
                                                                </a>
                                                                <a href="#" class="edit-kid text-primary mr-4"
                                                                    data-id="<%= kds[0][i].id %>"
                                                                    data-url="/admin/Kid/get_profile"
                                                                    data-type="edit-modal" data-toggle="tooltip"
                                                                    data-placement="top" title="Edit Kid">
                                                                    <i class="fas fa-pencil-alt"></i>
                                                                </a>
                                                                <% if (user.user_type=="ADMS" ) { %>
                                                                    <a href="#" class="delete-kid text-danger"
                                                                        data-id="<%= kds[0][i].id %>"
                                                                        data-url="/admin/Kids/delete_profile"
                                                                        data-toggle="tooltip" data-placement="top"
                                                                        title="Remove Kid">
                                                                        <i class="fas fa-times"></i>
                                                                    </a>
                                                                    <% } %>
                                                            </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                    <% } %>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="my-5">
                            <h6 class="text-center text-danger">No Kids Available</h6>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>
</div>
<!-- Kids Table End -->