<% include includes/head %>
            <div class="pic-bg"></div>
            <div class="overlay"></div>

            <section class="form-box">
                <div class="loginbox">
                    <img src="images/profile/avatar/avatar.png" class="avatar">
                    <h1>LOGIN</h1>
                    <form method="POST">
                        <div class="form-row">
                            <div class="col-12 my-3 error text-center text-danger mb-4"></div>
                            <div class="form-group col-12">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class="far fa-grin-wink"></i></span>
                                    </div>
                                    <input type="email" class="form-control" placeholder="Username" aria-label="Username" id="username"
                                        name="username" aria-describedby="basic-addon1">
                                </div>
                            </div>
                        
                            <div class="form-group col-12">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-unlock-alt"></i></span>
                                    </div>
                                    <input type="password" class="form-control" placeholder="Password" aria-label="Password" id="password"
                                        name="password" aria-describedby="basic-addon1">
                                </div>
                            </div>
                        </div>

                        <button type="button" class="btn btn-outline-success loginBtn mt-3">Login</button>
                        
                        <div class="external-links mt-3">
                            <ul>
                                <li>
                                    <span class="forgot-password txt2 ">
                                        <a href="#" text-center>
                                            Forgot Password?
                                        </a>
                                    </span>
                                </li>
                                <li>
                                    <span class="register txt2 ">
                                        Don't have an Account?
                                        <a href="/register">
                                            Register
                                        </a>
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </form>

            </section>
<% include includes/foot %>