<div class="row listn <%= tab.row_list%>">
    <div class="col-12">
        <!-- List View -->
        <div class="card card-stats mt-5">
            <div class="card-table-title bg-success">
                <h4 class="card-title ">Kids Table</h4>
                <p class="card-description"> List of kids for the Kids To school Foundation.</p>

            </div>
            <div class="card-body mt-5">
                <% if (kds.length> 1) {%>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">S/N</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">Age</th>
                                    <th scope="col">Fees</th>
                                    <th scope="col">Date Created</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (var i=0; i < kds.length; i++) { %>
                                    <tr>
                                        <th scope="row">
                                            <%= i + 1; %>
                                        </th>
                                        <td>
                                            <%= kds[i].fname + " " + kds[i].lname %>
                                        </td>
                                        <td>
                                            <%= kds[i].kid_id %>
                                        </td>
                                        <td>
                                            <%= kds[i].gender %>
                                        </td>

                                        <td>
                                            <%= kds[i].age %> Years
                                        </td>
                                        <td class="pretty-currency">
                                            <%= kds[i].school_fees %>
                                        </td>
                                        <td class="pretty-date">
                                            <%= kds[i].date_joined %>
                                        </td>
                                        <td class="td-actions">
                                            <a href="#" class="s-profile text-info mr-4" data-id="<%= kds[i].id %>"
                                                data-url="/sponsor/Kid/get_profile" data-type="display-modal"
                                                data-toggle="tooltip" data-placement="top" title="Kid Details">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                    <% } else if (kds.length==1) { %>
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">S/N</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Gender</th>
                                        <th scope="col">Age</th>
                                        <th scope="col">Fees</th>
                                        <th scope="col">Date Created</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var i=0; i < kds[0].length; i++) { %>
                                        <tr>
                                            <th scope="row">
                                                <%= i + 1; %>
                                            </th>
                                            <td>
                                                <%= kds[0][i].fname + " " + kds[0][i].lname %>
                                            </td>
                                            <td>
                                                <%= kds[0][i].category %>
                                            </td>
                                            <td>
                                                <%= kds[0][i].gender %>
                                            </td>

                                            <td>
                                                <%= kds[0][i].age %> Years
                                            </td>
                                            <td class="pretty-currency">
                                                <%= kds[0][i].school_fees %>
                                            </td>
                                            <td class="pretty-date">
                                                <%= kds[0][i].date_joined %>
                                            </td>
                                            <td class="td-actions">
                                                <a href="#" class="s-profile text-info mr-4"
                                                    data-id="<%= kds[0][i].id %>" data-url="/sponsor/Kid/get_profile"
                                                    data-type="display-modal" data-toggle="tooltip" data-placement="top"
                                                    title="Kid Details">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                <% } else { %>
                    <div class="my-5">
                        <h6 class="text-center text-danger">No Kids Available</h6>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- List View End -->
    </div>
</div>